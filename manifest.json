{
    "name": "I Hate Money",
    "id": "ihatemoney",
    "packaging_format": 1,
    "description": {
        "en": "A simple shared budget manager web application",
        "fr": "Une application web de comptes partagés à plusieurs"
    },
    "version": "4.1.5~ynh2",
    "url": "http://ihatemoney.org/",
    "upstream": {
        "license": "free",
        "demo": "https://ihatemoney.org/",
        "admindoc": "https://ihatemoney.readthedocs.io/",
        "code": "https://github.com/YunoHost-Apps/ihatemoney_ynh"
    },
    "license": "free",
    "maintainer": {
        "name": "Jocelyn Delalande",
        "email": "jocelyn@crapouillou.net",
        "url": "https://jocelyn.delalande.fr"
    },
    "requirements": {
        "yunohost": ">= 3.8"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/example",
                "default": "/ihatemoney"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
}
