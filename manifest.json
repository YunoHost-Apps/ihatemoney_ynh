{
    "name": "I Hate Money",
    "id": "ihatemoney",
    "packaging_format": 1,
    "description": {
        "en": "A simple shared budget manager web application",
        "fr": "Une application web de comptes partagés à plusieurs"
    },
    "url": "http://ihatemoney.org/",
    "version": "4.1.5~ynh2",
    "license": "free",
    "maintainer": {
        "name": "Jocelyn Delalande",
        "email": "jocelyn@crapouillou.net",
        "url": "https://jocelyn.delalande.fr"
    },
    "requirements": {
        "yunohost": ">= 4.2.4"
    },
    "multi_instance": false,
    "services": ["nginx", "mysql", "postfix"],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/example",
                "default": "/ihatemoney"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
}
